<?xml version="1.0" encoding='iso-8859-1' ?>
<project name="all" default="build">

	<property name="base.dir" value="${path::get-full-path( project::get-base-directory() )}" />
	<property name="sharedlibrary.dir" value="${base.dir}/Lib" />

	<!-- tasks to copy dependent assemblies -->

	<target name="copy-antlr-runtime">
		<copy todir="${bin.dir}">
			<fileset basedir="${sharedlibrary.dir}/${framework::get-target-framework()}">
				<include name="*.*" />
			</fileset>
		</copy>
	</target>
	
	<!-- tasks to test input files -->

	<target name="copy-st-tests">
		<copy todir="${bin.dir}/tests">
			<fileset basedir="${base.dir}/StringTemplateTests/TestInput">
				<include name="*.st" />
			</fileset>
		</copy>
	</target>
	
</project>
